
# Activar reescritura de URLs
RewriteEngine On

# Asegurar que se use la carpeta public como ra√≠z
RewriteBase /SISTEMA_MINIMARKET/public/

# Si el archivo o carpeta solicitada no existe, redirigir a index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
